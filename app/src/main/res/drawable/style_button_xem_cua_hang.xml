<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- Button when pressed -->
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Gray when pressed -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <!-- Default button background -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White by default -->
            <stroke android:width="2dp" android:color="#D9D9D9"/> <!-- Light gray border -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
