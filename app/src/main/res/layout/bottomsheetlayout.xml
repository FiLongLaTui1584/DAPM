<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbkg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="Tạo tin mới"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/lavender"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_clear_24"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="8dp"
            android:id="@+id/cancelButton"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/inputImg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnAddImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/add_img" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutVideo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tình trạng"
            android:textColorHint="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="*"
            android:textColorHint="@color/red"
            android:textSize="16sp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutChinhSach"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Chính sách bảo hành"
            android:textColorHint="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:inputType="text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="*"
            android:textColorHint="@color/red"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutXuatXu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Xuất xứ"
            android:layout_marginLeft="30dp"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:inputType="text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="*"
            android:textColorHint="@color/red"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutHDSD"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hướng dẫn sử dụng"
            android:textColorHint="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:inputType="text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="*"
            android:textColorHint="@color/red"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutTitle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề tin đăng"
            android:textColorHint="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:inputType="text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="*"
            android:textColorHint="@color/red"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDescrip"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mô tả chi tiết"
            android:textColorHint="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:inputType="text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="*"
            android:textColorHint="@color/red"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutBtn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:shadowColor="@color/lavender"
            android:shadowRadius="@integer/material_motion_duration_medium_2"
            android:layout_marginLeft="50dp"
            android:shadowDy="@integer/material_motion_duration_long_1"
            android:text="Tạo" />
    </LinearLayout>


</LinearLayout>