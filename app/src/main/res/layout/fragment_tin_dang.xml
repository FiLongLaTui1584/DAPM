<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".Fragment.TinDangFragment">


    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rg67xx16mpls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFB909"
                    android:paddingVertical="17dp"
                    android:paddingHorizontal="18dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rnvgolsbpod9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/rpppeog7kzm"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="4dp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="Quản lí tin đăng"
                            />
                        <ImageView
                            android:id="@+id/rnfmqnysl4k9"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@mipmap/ic_launcher"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rjy4lmhp3d2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="#FFFFFF"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="25dp"
                    android:orientation="horizontal">
                    <com.makeramen.roundedimageview.RoundedImageView
                        app:riv_corner_radius="5dp"
                        android:id="@+id/r83me183oecp"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_marginEnd="27dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"
                        />
                    <LinearLayout
                        android:id="@+id/rtt3to6kdr2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/r2cfly4ek1jb"
                            android:textColor="#3C3E40"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="2dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="I’m not Giap"
                            />
                        <LinearLayout
                            android:id="@+id/r5ca3dtdz11b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/r4evjh5636rb"
                                android:layout_width="9dp"
                                android:layout_height="9dp"
                                android:src="@drawable/baseline_add_24_blue"
                                android:scaleType="fitXY"
                                />
                            <TextView
                                android:id="@+id/rqwxs9gpxma"
                                android:textColor="#0559E0"
                                android:textSize="10sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text=" Tạo cửa hàng"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    app:tabSelectedTextColor="#FFB909"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTinDang"
                        android:layout_width="match_parent"
                        android:layout_height="515dp" />

                </FrameLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/r6um521duu65"
                    android:layout_width="match_parent"
                    android:layout_height="116dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
</FrameLayout>