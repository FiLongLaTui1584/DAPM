<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DangKyActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/main_color"
                android:paddingVertical="16dp"
                android:paddingLeft="30dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_cancel" />
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="25dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="CHỢ DỎM" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Đăng kí tài khoản" />
            <EditText
                android:id="@+id/sigup_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_text"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                android:hint="Họ và tên" />

            <EditText
                android:id="@+id/sigup_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_text"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:hint="Số điện thoại"
                android:inputType="phone" />

            <EditText
                android:id="@+id/sigup_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_text"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/sigup_Pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_text"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:hint="Mật khẩu"
                android:inputType="textPassword" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/tickButton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/style_tick_sigup"
                    android:drawableEnd="@drawable/ic_tick"
                    android:drawablePadding="5dp"
                    android:layout_marginEnd="8dp" />


                <TextView
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Bằng việc Đăng kí, bạn đã đọc và đồng ý với Điều khoản sử dụng và Chính sách bảo mật của Chợ Dỏm" />
            </LinearLayout>

            <Button
                android:id="@+id/sigup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/style_button_sigup"
                android:paddingVertical="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="ĐĂNG KÝ" />

            <TextView
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Được phát triển bởi"
                />
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#E83636"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Trần Phi Long"
                    android:layout_weight="0.3"
                    />
                <TextView
                    android:textColor="#F25800"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Nguyễn Trọng Anh Huy"
                    android:layout_weight="0.25"
                    />
                <TextView
                    android:textColor="#096F54"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Trần Nguyên Giáp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>