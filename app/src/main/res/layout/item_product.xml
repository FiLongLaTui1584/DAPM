<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/productImage1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image" />
        <ImageView
            android:id="@+id/productImage2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@drawable/sample_image" />
        <ImageView
            android:id="@+id/productImage3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@drawable/sample_image" />

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hahahaha hohoho hehehehe hihihihi"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9.999.999 đ"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/productLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa điểm: Tp Hồ Chí Minh"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:paddingTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/productFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_love"
                android:padding="10dp"
                android:layout_marginStart="-45dp"
                android:layout_marginEnd="70dp"/>
            <ImageView
                android:id="@+id/productMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more"
                android:padding="8dp" />

        </LinearLayout>





<!--
        Thông tin sản phẩm để truyền qua Detail (xài gone để ẩn)
-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/sellerID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hahahaha hoho"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/productDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dkuvvkujehv"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/productTinhTrang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/productBaoHanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảo hành"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/productXuatXu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xuất xứ"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/productHDSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDSD"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
